<xmlui>
  <strip id="stripMain">
    <section id="sectionClipboard">
      <action id="paste"/>
      <grid>
        <action id="cut"/>
        <action id="popupEditCopy"/>
      </grid>
    </section>
    <section id="sectionView">
      <grid>
        <action id="refresh"/>
        <row>
          <action id="viewHidden"/>
          <action id="viewSameDirectory"/>
          <action id="swapPanes"/>
        </row>
      </grid>
    </section>
    <section id="sectionSelect">
      <grid>
        <action id="selectMask"/>
        <row>
          <action id="selectAll"/>
          <action id="unselectAll"/>
          <action id="unselectMask"/>
          <action id="invertSelection"/>
        </row>
      </grid>
    </section>
    <section id="sectionFunctions" uniform="1">
      <action id="renameCurrent"/>
      <action id="viewCurrent"/>
      <action id="popupEdit"/>
      <action id="popupCopy"/>
      <action id="popupMove"/>
      <action id="createFolder"/>
      <action id="popupDelete"/>
      <action id="openTerminal"/>
    </section>
    <section id="sectionTools">
      <grid>
        <action id="packToZip"/>
        <action id="popupOpen"/>
        <action id="calculateSize"/>
        <action id="popupCompare"/>
        <action id="search"/>
        <action id="explore"/>
      </grid>      
    </section>
  </strip>
  <menu id="menuEdit">
    <action id="editCurrent"/>
    <action id="editNew"/>
  </menu>
  <menu id="menuCopy">
    <action id="copySelected"/>
    <action id="cloneSelected"/>
  </menu>
  <menu id="menuMove">
    <action id="moveSelected"/>
    <action id="renameSelected"/>
  </menu>
  <menu id="menuDelete">
    <action id="moveToTrashCan"/>
    <action id="deleteSelected"/>
  </menu>
  <menu id="menuEditCopy">
    <action id="copy"/>
    <action id="copyNames"/>
  </menu>
  <menu id="menuOpen">
    <action id="openDirectory"/>
    <action id="browse"/>
    <action id="openFtpSite"/>
  </menu>
  <menu id="menuCompare">
    <action id="compareFiles"/>
    <action id="compareDirectories"/>
  </menu>
  <menu id="menuDrives">
    <action id="refreshDrives"/>
  </menu>
</xmlui>
